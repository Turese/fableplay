<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>ID</th>
      <th>Rarity</th>
      <th>Flavor Text</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td> <center><%=item.name %><br><%= image_tag('/assets/items/'+item.id.to_s+'.png') %></center></td>
        <td><%= item.id %></td>
        <td><%= item.rarity %></td>
        <td><%= item.flavor_text %></td>
        <td><%= item.kind %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

